{block content}
<div class="bg">
    <div class="content">
        {snippet signin}
        <section class="mb-9 mb-lg-10 mb-xxl-11 text-center text-lg-start mt-1" id="signIn">
            <div class="row g-4 g-lg-6 g-xl-7 pt-6">
                <div class="d-none d-lg-block col-lg-6 text-center"><img width="60%" height="60%" class="img-fluid rounded-1" src="{$basePath}/assets/vazdata/img/pic/{$kytka}" alt="Happy dino" /></div>
                <div class="col-12 col-lg-6 justify-content-center mt-0">
                    <h2 class="fs-5 fs-lg-4 fs-xl-3 text-secondary fw-light mt-3 mb-4">Registrace</h2>
                    <p class="text-success fs-8 fs-lg-7 beginner-guide my-4">Vyplňte prosím registrační údaje, pokud jste již registrovaní můžete se přihlásit
                        <a class="text-secondary" href="{link home:registration}"> zde </a></p>
                    {control registerForm}
                </div>
            </div>
        </section>
        {/snippet}
    </div>
</div>
{/block}